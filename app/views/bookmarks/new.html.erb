<div class="container">
  <div class="header">
    <h1>New bookmark</h1>
    <%= link_to "Cancel", list_path(@list) %>
  </div>

  <div class="form-content">
    <%= simple_form_for [@list, @bookmark]  do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.button :submit, class: "btn" %>
    <% end %>
  </div>


</div>
